<p id="notice"><%= notice %></p>

<h1>查看所有物品</h1>

<table class="table">
  <thead>
    <tr>
      <th>名字</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.title %></td>
        <td><%= link_to 'Show', item, class: "btn btn-default" %></td>
        <td><%= link_to 'Edit', edit_item_path(item), class: "btn btn-default" %></td>
        <td><%= link_to 'Destroy', item, method: :delete, data: { confirm: '确认删除?' }, class: "btn btn-default"%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '新建', new_item_path, class: "btn btn-default"%>
